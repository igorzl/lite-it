     <div class="container justify-content-md-center">

        <div class="row">

          <div class="col-12 col-md-4 m-0">
            <div class="prj-descr">
              <h2><%= @project.name %></h2>
              <h4><%= @project.location %></h4>
            </div>

            <div class="edit-delete-project">
              <%= link_to "Edit", edit_project_path %>
              <%= link_to "  /  Delete", project_path, method: 'delete', data: { confirm: "Do you want to delete this project ?"} %>
            </div>

          </div>

        </div>

        <div class="row">

           <div class="col-12 col-md-6 col-lg-4 m-0">

              <!-- link_to new_canvas_path, class: "card-link" do  -->
              <%= link_to new_project_canvas_path(@project) do %>

              <div class="card-canvas">
                <%= image_tag "plus.png", alt: "Add new canvas", width: 330, height: 182, style: 'max-width: 100%;height:auto;' %>
              </div>

              <% end %>
          </div>

          <% @project.canvases.each_with_index do |canvas, index| %>

          <div class="col-12 col-md-6 col-lg-4 m-0">

            <!-- link_to canvas_path(canvas), class: "card-link" do  -->
            <%= link_to canvas_path(canvas) do %>

             <div class="card-canvas">

              <% if canvas.photo.url %>
                <%= cl_image_tag canvas.photo, width: 330, height: 182, crop: :fill %>
              <% else %>
                <%#= image_tag 'https://www.anitian.com/wp-content/uploads/2016/11/silicon-valley-gilfoyle.jpg', class: "thumb-index"%>
                <%= image_tag 'https://66.media.tumblr.com/e287c849069799c3f35230aeecfe868c/tumblr_pxfq3nA9yH1wqm65mo1_1280.jpg', class: "thumb-index", width: 330, height: 182, crop: :scale %>
              <% end %>

             </div>

            <% end %>


          </div>

        <% end %>

       </div>

     </div>

  </div>

