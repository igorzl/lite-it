<div class="container">
  <div class="row">
    <div class="top-navigation">
      <button id="rectangle-btn">Rectangle</button>
      <button id="text-btn">Textbox</button>
      <button id="delete-btn">Delete selected</button>

      <%= form_for :canvas, url: project_canvases_url, method: :post, html: { id: "save-btn" } do |f|%>
        <%= f.hidden_field :description, id: 'canvas_json' %>
        <%= f.hidden_field :photo, id: 'canvas_svg' %>
        <%= f.submit 'Save canvas' %>
      <% end %>
    </div>
    <div class="canvas-container">
      <canvas id="canvas" width="1000px" height="600px" data-canvas="<% @canvas %>"></canvas>
    </div>
    <div class="bottom-navigation" id="bottom-navigation"></div>
  </div>
</div>
<%= javascript_pack_tag 'canvas' %>